{
  "author": "Michael Mykhaylov <mikemikhailov2003@gmail.com>",
  "description": "React Boilerplate made on Snowpack, TypeScript and styled-components",
  "keywords": [
    "react",
    "react boilerplate",
    "react typescript",
    "snowpack"
  ],
  "license": "MIT",
  "main": "./src/index.tsx",
  "name": "snowpack-react-boilerplate",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:mmykhaylov/snowpack-react-boilerplate.git"
  },
  "version": "1.0.0",
  "scripts": {
    "dev": "snowpack dev",
    "build": "snowpack build",
    "start": "servor build index.html 8080",
    "format": "prettier --config ./.prettierrc.yml --write \"./src/**/*.ts?(x)\"",
    "lint": "eslint -c ./.eslintrc.yml \"./src/**/*.ts?(x)\"",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@snowpack/plugin-react-refresh": "^2.4.2",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/snowpack-env": "^2.3.3",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "servor": "^4.0.2",
    "snowpack": "^3.2.2",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "styled-components": "^5.2.3"
  }
}
